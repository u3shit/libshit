# uncrustify config file
# buggy as hell, use carefully

newlines = lf
string_replace_tab_chars = true
tok_split_gte = false
utf8_bom = remove
utf8_force = true



indent_columns = 2
# allow foo(asd,
#           def)
# like thing
indent_continue = 0
indent_with_tabs = 0
# indent namespace
indent_namespace = true
# don't indent extern "C"
indent_extern = false
indent_col1_comment = true
indent_class = true
indent_label = -2
indent_access_spec = -2
indent_with_tabs = 0

indent_func_const = 0
indent_func_throw = 0
indent_class_colon = true
indent_constr_colon = true


# sp
sp_angle_shift = remove
sp_permit_cpp11_shift = true
sp_pp_concat = ignore

# aligns \ in multiline macros
align_nl_cont = true


nl_collapse_empty_body = true
nl_assign_leave_one_liners = true
nl_class_leave_one_liners = true
nl_enum_leave_one_liners = true
nl_getset_leave_one_liners = true
nl_func_leave_one_liners = true
nl_cpp_lambda_leave_one_liners = true
nl_if_leave_one_liners = true
nl_while_leave_one_liners = true
nl_end_of_file = add

nl_multi_line_define = true
nl_enum_brace = force
nl_struct_brace = force
nl_union_brace = force
nl_if_brace = force
nl_brace_else = force
nl_elseif_brace = force
nl_else_brace = force
nl_else_if_brace = remove
#nl_try_brace = force
nl_for_brace = force
#nl_catch_brace = force
nl_brace_catch = force
nl_while_brace = force
nl_do_brace = force
nl_brace_while = remove
nl_switch_brace = force
#nl_namespace_brace = force
nl_class_brace = force
nl_fdef_brace = force
nl_cpp_ldef_brace = force


# pos

# ls?
code_width = 81


mod_full_brace_for = remove
mod_full_brace_if = remove
mod_full_brace_while = remove


cmt_width = 80
cmt_reflow_mode = 2


pp_space = add
pp_space_count = 2

use_indent_continue_only_once = true
